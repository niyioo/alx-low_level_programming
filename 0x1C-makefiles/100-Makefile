CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
MKDIR_P = mkdir -p

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

$(OBJ): $(SRC) m.h
	$(CC) -c -o $@ $(filter %.c,$^) $(CFLAGS)

clean:
	-$(RM) *~
	-$(RM) $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: oclean
	-$(RM) $(NAME)

re: fclean all

