CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	@echo $(CC) $(CFLAGS) -c -o main.o main.c
	@$(CC) $(CFLAGS) -c -o main.o main.c
	@echo $(CC) $(CFLAGS) -c -o school.o school.c
	@$(CC) $(CFLAGS) -c -o school.o school.c
	@echo $(CC) $(OBJ) -o $(NAME)
	@$(CC) $(OBJ) -o $(NAME)

clean :
	@echo $(RM) *~ $(NAME)
	@$(RM) *~ $(NAME)

oclean :
	@echo $(RM) $(OBJ)
	@$(RM) $(OBJ)

fclean : clean oclean

re : oclean all

